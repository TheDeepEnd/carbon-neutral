<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>
  <div class="row">


      <div class="form-inputs">
        <%= f.input :firstname %>
        <%= f.input :lastname %>
        <%= f.input :age %>
        <%= f.input :country %>
        <%= f.input :state %>
        <%= f.input :city %>
        <%= f.input :zipcode %>
      </div>
  </div>

  <hr>
  <div class="row">
      <h4>Housing Data</h4>
      <div class="form-inputs">
        <%= f.simple_fields_for :houses do |house| %>
          <%= house.input :electricity %>
          <%= house.input :gas %>
          <%= house.input :fuel %>
          <%= house.input :water %>
        <% end %>
      </div>
      <div class="form-actions">
        <%= f.button :submit %>
      </div>
  </div>
<% end %>
