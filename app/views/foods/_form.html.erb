<%= simple_form_for([@profile,@food], :url => profile_food_path(@profile)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :red_meat %>
    <%= f.input :poultry %>
    <%= f.input :seafood %>
    <%= f.input :vegetables %>
    <%= f.input :milk %>
    <%= f.input :other_drinks %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
